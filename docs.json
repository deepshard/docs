{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Truffle",
  "llmsTxt": {
    "enabled": true
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity"
    ]
  },
  "colors": {
    "primary": "#000000",
    "light": "#ff690f",
    "dark": "#ffffff"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "SDK",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "sdk/installation",
              "sdk/cli"
            ]
          },
          {
            "group": "Building Apps",
            "pages": [
              "sdk/building-apps",
              "sdk/focus-app",
              "sdk/ambient-app",
              "sdk/inference"
            ]
          }
        ]
      },
      {
        "tab": "TruffleOS Client",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "client/overview"
            ]
          }
        ]
      },
      {
        "tab": "Hardware",
        "groups": [
          {
            "group": "Truffle-1",
            "pages": [
              "hardware/overview"
            ]
          }
        ]
      },
      {
        "tab": "Release Notes",
        "groups": [
          {
            "group": "Changelog",
            "pages": [
              "release-notes/changelog"
            ]
          }
        ]
      },
      {
        "tab": "FAQs",
        "groups": [
          {
            "group": "FAQs",
            "pages": [
              "faqs/general"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Homepage",
          "href": "/sdk/installation",
          "icon": "house",
          "color": {
            "light": "#000000",
            "dark": "#ffffff"
          }
        },
        {
          "anchor": "Discord",
          "href": "https://discord.gg/itsalltruffles",
          "icon": "discord",
          "color": {
            "light": "#000000",
            "dark": "#ffffff"
          }
        },
        {
          "anchor": "X",
          "href": "https://x.com/itsalltruffles",
          "icon": "x-twitter",
          "color": {
            "light": "#000000",
            "dark": "#ffffff"
          }
        }
      ]
    }
  },
  "logo": {
    "light": "/images/truffle.png",
    "dark": "/images/truffle.png",
    "href": "https://order.truffle.net"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://discord.gg/itsalltruffles"
      }
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/itsalltruffles",
      "github": "https://github.com/deepshard"
    }
  }
}
